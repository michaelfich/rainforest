<h2>User: <%= @user.name %></h2>

<nav class="buttons">
  <% if current_user && current_user == @user %>
    <%= link_to "Edit Profile", edit_user_path(@user) %>
  <% end %>
</nav>

<dl class="profile">
  <dt>Name</dt>
  <dd><%= @user.name %></dd>

  <dt>Email Address</dt>
  <dd><%= @user.email %></dd>

  <dt>Registration Date</dt>
  <dd><%= @user.created_at %></dd>
</dl>
