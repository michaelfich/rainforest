<%= form_for @product do |f| %>
  <% if @product.errors.any? %>
    <h2>Errors:</h2>
    <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :price_in_cents %>
    <%= f.number_field :price_in_cents %>
  </div>
  <div>
    <%= f.label :category_id %>
    <%= f.select :category_id, @categories.map { |c| [c.name.capitalize, c.id] } %>
  </div>
  <%= f.submit %>
  <%= link_to 'Back', products_url %>
<% end %>