<h1>Add a new product</h1>

<%= form_for @product do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :price_in_cents %>
    <%= f.text_field :price_in_cents %>
  </div>
  <%= f.submit %>
<% end %>