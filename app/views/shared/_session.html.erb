<nav class='session'>
  <ul>
    <% if current_user %>
      <li>
        Logged in as
        <%= link_to current_user.name, user_path(current_user), class: 'edit user' %>
      </li>
      <li><%= link_to 'Log out', session_path("current"), :method => :delete %></li>
    <% else %>
      <li><%= link_to 'Sign up', new_user_path %></li>
      <li><%= link_to 'Log in', new_session_path %></li>
    <% end %>
  </ul>
</nav>
